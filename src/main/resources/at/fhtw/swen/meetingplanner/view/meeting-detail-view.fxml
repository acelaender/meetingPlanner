<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox style="-fx-border-color: #c7c7c7; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhtw.swen.meetingplanner.controller.MeetingDetailController">
   <children>
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="4.0">
         <children>
            <Button fx:id="editButton" mnemonicParsing="false" onAction="#onEditButtonClick" styleClass="transparent-image-button">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/editButton.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="exportButton" mnemonicParsing="false" text="Export" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding>
      </HBox>
      <Label fx:id="titleLabel" styleClass="title2-label" text="Label" />
      <TextField fx:id="titleField">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin></TextField>
      <Label fx:id="timeLabel" text="Label" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="startTimeField" />
            <Label text="-" />
            <TextField fx:id="endTimeField" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="agendaLabel" text="Label" />
      <TextArea fx:id="agendaArea" minHeight="-Infinity" prefHeight="200.0" prefWidth="200.0">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin></TextArea>
      <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" styleClass="black-button" text="Save" />
      <Button fx:id="addNoteButton" mnemonicParsing="false" onAction="#onAddNoteButtonClick" styleClass="black-button" text="Add Note">
         <VBox.margin>
            <Insets bottom="15.0" top="15.0" />
         </VBox.margin></Button>
      <VBox fx:id="formContainer" prefHeight="200.0" prefWidth="100.0" />
      <VBox fx:id="noteContainer" prefHeight="200.0" prefWidth="100.0" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <VBox.margin>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </VBox.margin>
</VBox>
