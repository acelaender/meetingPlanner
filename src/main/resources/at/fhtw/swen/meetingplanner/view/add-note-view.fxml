<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhtw.swen.meetingplanner.controller.AddNoteViewController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" styleClass="card">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <children>
            <Label text="Add New Note" />
            <Label text="Note Title" />
            <TextField fx:id="titleField" promptText="Enter Meeting Title" />
            <Label text="Note Content" />
            <TextArea fx:id="contentArea" prefHeight="200.0" prefWidth="200.0" promptText="Enter your Note" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" styleClass="black-button" text="Add Note" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></VBox>
   </children>
</VBox>
